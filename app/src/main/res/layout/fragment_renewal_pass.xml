                                android:text="ID Number:"
                                android:textAlignment="center"
                                android:textSize="15dp"

                                android:textStyle="bold|italic" />

                            <TextView
                                android:id="@+id/Rid_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
